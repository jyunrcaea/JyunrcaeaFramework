<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>JyunrcaeaFramework</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <OutputType>Library</OutputType>
    <Title>Jyunrcaea! Framework</Title>
    <Company>Jyunrcaea!</Company>
    <Authors>614project</Authors>
    <Description>This is C# framework for make game!</Description>
    <PackageProjectUrl>http://jyunrcaeaframework.kro.kr</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jyunrcaea/JyunrcaeaFramework</RepositoryUrl>
    <PackageId>JyunrcaeaFramework</PackageId>
    <PackageReadmeFile>README_EN.md</PackageReadmeFile>
    <PackageIcon>Icon.png</PackageIcon>
    <Copyright>Copyright 2023. 614project. All rights reserved.</Copyright>
    <PackAsTool>True</PackAsTool>
    <Version>0.6.1</Version>
    <SignAssembly>False</SignAssembly>
    <GenerateDocumentationFile>False</GenerateDocumentationFile>
    <ApplicationIcon>Jyunrcaea_FrameworkIcon.ico</ApplicationIcon>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>False</Optimize>
    <WarningLevel>9999</WarningLevel>
    <CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <WarningLevel>9999</WarningLevel>
    <CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
    <Optimize>False</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Jyunrcaea_FrameworkIcon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README_EN.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
	  <Content Include="src\Icon.png">
		  <Pack>True</Pack>
		  <PackagePath>\</PackagePath>
	  </Content>
    <Content Include="dll\SDL2.dll">
		<Pack>True</Pack>
		<PackagePath>\</PackagePath>
	</Content>
  </ItemGroup>

  <ItemGroup>
    <None Update="dll\SDL2_gfx.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="dll\SDL2_ttf.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="libfreetype-6.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="libjpeg-9.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="libpng16-16.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="libtiff-5.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="libwebp-7.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="dll\SDL2.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="dll\SDL2_image.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="dll\SDL2_mixer.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="test.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="zlib1.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
